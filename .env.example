# MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/framekart?retryWrites=true&w=majority

# Clerk Authentication (Use PRODUCTION keys for live deployment)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_xxxxxxxxxxxxx
CLERK_SECRET_KEY=sk_live_xxxxxxxxxxxxx
CLERK_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# Cashfree Payment Gateway (Use PRODUCTION keys and mode for live deployment)
CASHFREE_APP_ID=your_production_app_id
CASHFREE_SECRET_KEY=your_production_secret_key
CASHFREE_ENVIRONMENT=production
NEXT_PUBLIC_CASHFREE_MODE=production

# Cloudinary
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# App URL & Site Configuration (Production URL)
NEXT_PUBLIC_APP_URL=https://framekart.co.in
SITE_URL=https://framekart.co.in

# Admin User (for initial setup)
ADMIN_USER_ID=your_clerk_user_id

# Email (Optional - for contact form and order notifications)
RESEND_API_KEY=re_xxxxxxxxxxxxx

# Rate Limiting (Optional - for Upstash Redis)
UPSTASH_REDIS_REST_URL=https://xxxxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=xxxxxxxxxxxxx
